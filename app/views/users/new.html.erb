<%= render "/shared/error_messages", :target => @user %>

<p><%= link_to "Main", "/" %> &gt; Register</p>

<% if current_user %>
<p>You have to log out to access this page.</p>
<% else %>
  <%= form_for @user, :url => { :action => :create } do |f| %>
    <%= f.label :name, :class => "form_label" %>
    <%= f.text_field :name %><br />
    <%= f.label :email, :class => "form_label" %>
    <%= f.text_field :email %><br />
    <%= f.label :password, :class => "form_label" %>
    <%= f.password_field :password %><br />
    <%= f.label :password_confirmation, :class => "form_label" %>
    <%= f.password_field :password_confirmation %><br />
    <%= f.submit "Register" %>
  <% end %>
<% end %>
