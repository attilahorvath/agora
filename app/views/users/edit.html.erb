<p><%= link_to "Main", "/" %> &gt; Options</p>

<%= render "shared/error_messages", :target => @user %>

<%= form_for @user do |f| %>
  <h2>General</h2>
  <%= f.label :email, :class => "form_label" %>
  <%= f.text_field :email %><br />
  <%= f.label :password, :class => "form_label" %>
  <%= f.password_field :password %><br />
  <%= f.label :password_confirmation, :class => "form_label" %>
  <%= f.password_field :password_confirmation %><br />
  <h2>Notifications</h2>
  <p>
    <%= f.check_box :comment_notification %><%= f.label :comment_notification, "Send me an e-mail when someone comments on a topic created by me." %><br />
    <%= f.check_box :reply_notification %><%= f.label :reply_notification, "Send me an e-mail when someone replies to a comment written by me." %><br />
  </p>
  <%= f.submit "Save" %>
<% end %>
