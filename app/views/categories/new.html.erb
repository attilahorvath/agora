<%= render "/shared/error_messages", :target => @category %>

<p><%= link_to "Main", "/" %> &gt; Create new category</p>

<% if current_user %>
  <%= form_for @category do |f| %>
    <p>
      <%= f.label :name, :class => "form_label" %>
      <%= f.text_field :name %>
    </p>
    <%= f.submit "Create" %>
  <% end %>
<% else %>
  <p>You have to be logged in to access this page.</p>
<% end %>
