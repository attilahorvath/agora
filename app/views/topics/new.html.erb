<%= render "/shared/error_messages", :target => @topic %>

<p><%= link_to "Main", "/" %> &gt; <%= link_to @topic.category.name, category_url(@topic.category) %> &gt; Create new topic</p>

<%= form_for @topic do |f| %>
  <p>
    <%= f.label :title, :class => "form_label" %>
    <%= f.text_field :title %><br />
    <%= f.label :category_id, "Category", :class => "form_label" %>
    <%= f.select :category_id, Category.all.collect {|c| [c.name, c.id] } %><br />
    <%= f.label :description, :class => "form_label" %>
    <%= f.text_area :description, :cols => 35, :rows => 5 %>
  </p>
  <%= f.submit "Create" %>
<% end %>
